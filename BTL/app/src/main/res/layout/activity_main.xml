<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/splash_bg"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/splash_lg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tủ sách của Phong"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="#171716"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_btnlogin"
        android:id="@+id/btnLogin"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/shape_btnskip"
        android:text="Tiếp tục mà không cần đăng nhập"
        android:id="@+id/btnSkip"
        />
</LinearLayout>